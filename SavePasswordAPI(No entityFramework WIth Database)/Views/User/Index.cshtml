@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create New", "Create")

<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Edit || Delete</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
<tr>
    <td>@Model.Rows[i][1]</td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { uid = Model.Rows[i][0] }) ||
        @Html.ActionLink("Delete", "Delete", new { uid = Model.Rows[i][0] }) ||
        @Html.ActionLink("Detail", "Details", new { uid = Model.Rows[i][0] })
    </td>
</tr>
    }
</table>

